<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_bkgrd"
    android:onClick="LoginSignUpMethod"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".SignUp">

    //0.2

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />


    //1.4

    <ImageView

        android:id="@+id/logo_Image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginLeft="-1dp"
        android:layout_weight="1.4"
        android:src="@drawable/signup_bike_logo_bkgrd"
        android:transitionName="logo_Image" />


    //1.1

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.6"
        >
        <TextView
            android:id="@+id/logo_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/bungee"
            android:letterSpacing="0.09"
            android:text="Thanks for choosing us"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:transitionName="logo_Text"

            />


    </LinearLayout>


    //0.1

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1" />


    //0.2

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_weight="0.2"

        android:fontFamily="@font/nexa_bold"
        android:letterSpacing="0.5"
        android:text="create account in our hearts"
        android:textColor="@android:color/white"
        android:textSize="12sp" />


    //0.7

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5" />


    //0.6

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.6" />


    //0.4

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:fontFamily="@font/nexa_bold"
        android:letterSpacing="0.1"
        android:text="Create An Account"
        android:textColor="@android:color/black"
        android:textSize="13sp" />


    //0.2

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />


    //0.8

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fullName"
        style="@style/TextInputLayoutStyle_black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.8"
        android:textColorHint="@android:color/black"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"

        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:startIconDrawable="@drawable/profile_image"
        app:startIconTint="@android:color/black"


        >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    //0.2

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />


    //0.8

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneNumber"
        style="@style/TextInputLayoutStyle_black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.8"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"

        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:startIconDrawable="@drawable/phone"
        app:startIconTint="@android:color/black">


        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number"
            android:textSize="12sp"
            android:maxLength="11"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    //0.2

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />


    //0.8

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        style="@style/TextInputLayoutStyle_black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.8"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:startIconDrawable="@drawable/email"
        app:startIconTint="@android:color/black">


        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nexa_bold"
            android:hint="Email.."
            android:inputType="textEmailAddress"
            android:text="Email@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    //0.2

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />


    //0.8

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:weightSum="10">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            style="@style/TextInputLayoutStyle_black"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.1"
            android:textColorHint="@android:color/black"
            app:boxCornerRadiusBottomEnd="8dp"

            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/yellow_dark"
            app:startIconDrawable="@drawable/password"
            app:startIconTint="@android:color/black">


            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/login_SIGNUP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_weight="1.6"
            android:gravity="center"
            android:onClick="LoginSignUpMethod"
            android:scaleType="center"
            android:tint="@android:color/white"
            app:backgroundTint="@color/yellow_dark"
            app:fabSize="auto"
            app:srcCompat="@drawable/go" />


    </LinearLayout>


    //0.5

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    //0.3

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/signIn_btn1_SIGNUP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nexa_bold"
            android:inputType="textShortMessage"
            android:letterSpacing="0.22"
            android:text="@string/already_have_an_account"
            android:textColor="@color/red"
            android:textSize="12sp"

            />

        <Button
            android:id="@+id/signIn_btn2_SIGNUP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nexa_bold"
            android:inputType="textShortMessage"
            android:text="Sign In"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />


</LinearLayout>