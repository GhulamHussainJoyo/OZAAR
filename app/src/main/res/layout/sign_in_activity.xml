<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_in_bkgrd"
    tools:context=".SignIn"
    android:orientation="vertical"
    android:weightSum="10"
    >


    //0.2
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        />

    //1.4
    <ImageView
        android:id="@+id/logo_Image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:src="@drawable/signin_bike_logo"
        android:layout_gravity="right"
        android:transitionName="logo_Image"

        />



    //1.7

    <TextView

        android:id="@+id/logo_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:text="Hello there, Welcome Back"
        android:textColor="@android:color/white"
        android:fontFamily="@font/bungee"
        android:textSize="37sp"
        android:layout_marginLeft="12dp"
        android:letterSpacing="0.09"
        android:transitionName="logo_Text"
        />


    //0.3
    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Sign In To Continue..."
        android:textColor="@android:color/white"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/nexa_bold"
        android:textSize="14sp"
        android:textStyle="bold"
        />





    //0.5
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>






    //0.7
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        />






    //0.3
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="Sign In"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />








    //0.3
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>





    //0.8
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        style="@style/TextInputLayoutStyle_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        app:startIconDrawable="@drawable/email"
        app:startIconTint="@android:color/white"
        app:hintTextColor="@android:color/white"
        app:hintEnabled="true"
        app:endIconCheckable="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"


        >



        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nexa_bold"
            android:inputType="text"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>




    //0.3
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>



    //0.8
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        style="@style/TextInputLayoutStyle_white"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        app:startIconDrawable="@drawable/password"
        app:startIconTint="@android:color/white"
        app:hintTextColor="@android:color/white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"


        >



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password.."
            android:textColor="@android:color/white"
            android:inputType="textPassword"
            android:textStyle="bold"/>

    </com.google.android.material.textfield.TextInputLayout>


    //0.3
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>



    //0.3
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@android:color/transparent"
        android:text="Forgot Password ?"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:letterSpacing="0.3"
        />


    //0.7

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/signIn_Btn"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_weight="0.7"
        android:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/go"
        android:tint="@android:color/black"
        app:backgroundTint="@android:color/white"
        android:scaleType="center"
       app:fabCustomSize="50dp"

        />




    //0.8
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"/>


    //0.3
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:weightSum="10"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/signUp_Btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@android:color/transparent"
            android:fontFamily="@font/nexa_bold"
            android:text="DON'T HAVE AN ACCOUNT ?"
            android:textColor="@color/red"
            android:inputType="textShortMessage"
            android:textSize="11sp"
            android:letterSpacing="0.24"

            />

        <Button
            android:id="@+id/signUp_Btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:text="SIGN UP"
            android:textColor="@android:color/black"
            android:fontFamily="@font/nexa_bold"
            android:inputType="textShortMessage"
            android:textSize="11sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>




    //0.3
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>



</LinearLayout>